<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home_teacher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rajul.cas.HomeTeacher"
    tools:showIn="@layout/activity_home_teacher"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="80dp">
    <Button
        android:text="Upload Attendance"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:id="@+id/uploadattendance"
        android:padding="25dp"
        android:background="@drawable/button_selector"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:onClick="jumptoDialog1"
        android:layout_weight="4"
        />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:orientation="horizontal"
       android:id="@+id/lines"
       android:layout_weight="3"
       >
       <View
           android:layout_width="0dp"
           android:layout_height="1dp"
           android:background="@color/colorPrimary"
           android:layout_gravity="center_vertical"
           android:layout_weight="4"/>
       <TextView
           android:text="OR"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:layout_marginBottom="15dp"
           android:id="@+id/or"
           android:textColor="@color/colorPrimary"
           android:layout_weight="1"
           android:layout_gravity="center_vertical"
           android:gravity="center"
           />
       <View
           android:layout_width="0dp"
           android:layout_height="1dp"
           android:background="@color/colorPrimary"
           android:layout_gravity="center_vertical"
           android:layout_weight="4"/>

      </LinearLayout>
     <Button
          android:layout_height="0dp"
          android:id="@+id/updateAttendance"
          android:layout_below="@id/lines"
          android:layout_gravity="center"
          android:padding="25dp"
          android:background="@drawable/button_selector"
          android:textColor="@color/colorAccent"
          android:textSize="16sp"
          android:text="Update Attendance"
          android:layout_width="wrap_content"
         android:onClick="jumptoDialog2"
         android:layout_weight="4"/>
    </LinearLayout>

</RelativeLayout>
