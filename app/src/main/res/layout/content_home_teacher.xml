<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home_teacher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rajul.cas.HomeTeacher"
    tools:showIn="@layout/activity_home_teacher"
    android:orientation="vertical">

    <Button
        android:text="Upload Attendance"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/uploadattendance"
        android:padding="20dp"
        android:background="@drawable/button_selector"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:onClick="jumptoDiaglog1"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_below="@id/uploadattendance"
       android:id="@+id/lines">
       <View
           android:layout_width="120dp"
           android:layout_height="1dp"
           android:background="@color/colorPrimary"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="15dp" />
       <TextView
           android:text="OR"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_margin="15dp"
           android:id="@+id/or"
           android:textColor="@color/colorPrimary"
           />
       <View
           android:layout_width="120dp"
           android:layout_height="1dp"
           android:background="@color/colorPrimary"
           android:layout_gravity="center_vertical"
           android:layout_marginRight="15dp"

           android:layout_weight="1"/>

      </LinearLayout>
     <Button
          android:layout_height="68dp"
          android:id="@+id/updateAttendance"
          android:layout_below="@id/lines"
          android:layout_centerHorizontal="true"
          android:padding="20dp"
          android:background="@drawable/button_selector"
          android:textColor="@color/colorAccent"
          android:textSize="16sp"
          android:text="Update Attendance"
          android:layout_width="wrap_content"
         android:onClick="jumptoDialog2"/>

</RelativeLayout>
