<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ask_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rajul.cas.asksignup"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    >


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:id="@+id/teacherstudentloginLLayout1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:id="@+id/cas4"
        android:text="COLLEGE ATTENDANCE SYSTEM"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:id="@+id/teacherstudentloginLLayout2"
        android:gravity="center"
        >
    <Button
        android:id="@+id/teacherasksignupbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp"
        android:text="TEACHER"
        android:textColor="@color/White"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linessinupativity"
        android:layout_gravity="center">
        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:layout_weight="1.5"/>
        <TextView
            android:text="SIGNUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/asksignup"
            android:textColor="@color/colorPrimary"
            android:gravity="center"/>
        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:layout_weight="1.5"/>

    </LinearLayout>

    <Button
        android:id="@+id/studentasksignupbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp"
        android:text="STUDENT"
        android:textColor="@color/White"
        android:textSize="16sp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="OR LOGIN?"
        android:textColor="@color/colorPrimary"
        android:id="@+id/orlogin"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:onClick="jumptoAskLoginScreen"
        android:paddingBottom="10dp"/>

   </LinearLayout>

</RelativeLayout>
