<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:layout_centerHorizontal="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:id="@+id/attendanceuploadDoneButton"
        android:gravity="center"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/successTextTickDialog"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:src="@drawable/check_square"
        android:id="@+id/tick"
        android:layout_weight="2"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textColor="@color/colorPrimary"
        android:text="Attendance Uploaded"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:layout_weight="8"
        android:id="@+id/successText"
        android:gravity="center_vertical"

        />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@color/White"
        android:background="@drawable/button_selector"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:onClick="jumptoHomeTeacher"
        android:layout_below="@id/successTextTickDialog"
        android:layout_centerHorizontal="true"/>
    </LinearLayout>

</RelativeLayout>