<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ask_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rajul.cas.AskLogin"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cas3"
        android:text="COLLEGE ATTENDANCE SYSTEM"
        android:layout_marginTop="110dp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/teacheraskloginbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp"
        android:text="TEACHER"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/teacheraskloginbutton"
        android:id="@+id/linessinupativity"
        android:layout_gravity="center">
        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:layout_weight="1.5"/>
        <TextView
            android:text="LOGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/asklogin"
            android:textColor="@color/colorPrimary"
            android:gravity="center"/>
        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:layout_weight="1.5"/>

    </LinearLayout>

    <Button
        android:id="@+id/studentaskloginbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp"
        android:text="STUDENT"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR SIGNUP?"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/orsignup"
        android:textSize="16sp"
        android:textStyle="bold"
        android:onClick="jumptoAskSignupScreen" />

</LinearLayout>
