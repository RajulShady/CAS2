<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_studentprofile_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rajul.cas.StudentprofileEntry"
    tools:showIn="@layout/activity_studentprofile_entry"
    android:orientation="vertical">

    <EditText
        android:id="@+id/univrollno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="University Rollno."
        android:layout_marginBottom="30dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="100dp"
        android:textColorHint="@color/colorPrimary"/>
    <LinearLayout
        android:id="@+id/twoedittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/univrollno"
        android:layout_marginBottom="30dp">
        <EditText
            android:id="@+id/sec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:hint="Sec"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"/>
        <EditText
            android:id="@+id/sem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:hint="Sem"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"/>
    </LinearLayout>
    <EditText
        android:id="@+id/contactno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact no."
        android:layout_below="@id/twoedittext"
        android:layout_marginBottom="40dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:textColor="@color/colorAccent"
        android:background="@drawable/button_selector"
        android:layout_below="@id/contactno"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="jumptoStudentDashboard"
        />




</RelativeLayout>
